<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/x2">

    <LinearLayout
        android:id="@+id/mainFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x10"
        android:background="@drawable/roundshapelayout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivHotel"
            android:layout_width="@dimen/x75"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/x3"
            android:layout_gravity="center_vertical"
            android:src="@drawable/hotel_list" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.app.amyal.ui.views.AnyTextView1
                    android:id="@+id/tvHotelName"
                    android:layout_width="0dp"
                    android:layout_weight="0.65"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkBrown"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textSize="@dimen/x17"
                    android:maxLength="35"
                    tools:text="Preston Cottage"
                    app:typeface="@string/font_normal" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">

                    <com.app.amyal.ui.views.CustomRatingBar
                        android:id="@+id/CrRating"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x15"
                        android:layout_marginLeft="@dimen/x5"
                        app:maxStars="5"
                        app:onlyForDisplay="true"
                        app:starOff="@drawable/star1"
                        app:starOn="@drawable/star"
                        app:starPadding="@dimen/x2"
                        app:stars="4" />

                </LinearLayout>


            </LinearLayout>

            <com.app.amyal.ui.views.AnyTextView
                android:id="@+id/tvLocationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/x13"
                android:text="Las Vegas"
                app:typeface="@string/font_normal" />

            <LinearLayout
                android:id="@+id/llTextRatting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvRatting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_green"
                    android:textSize="@dimen/x13"
                    android:text="8.4 "
                    android:alpha="0.7"
                    app:typeface="@string/font_normal" />

                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvReviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/x13"
                    android:text="Very Good"
                    android:alpha="0.7"
                    app:typeface="@string/font_normal" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x3">

                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x13"
                    android:text="AED 1500.00"
                    app:typeface="@string/font_normal" />

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>