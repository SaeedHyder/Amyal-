<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/flight_1"/>

            <View
                android:layout_width="@dimen/x1"
                android:layout_height="@dimen/x90"
                android:background="@color/white"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.app.amyal.ui.views.AnyTextView
                android:id="@+id/tvLayover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/x16"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginLeft="@dimen/x5"
                android:alpha="0.8"
                tools:text="asdasd"
                app:typeface="@string/font_normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

               <!-- <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvStopName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x16"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/x5"
                    android:maxLines="1"
                    tools:text="Las Vegas"
                    app:typeface="@string/font_normal" />-->


                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x18"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/x5"
                    android:maxLines="2"
                    android:alpha="0.8"
                    tools:text="01:00 pm - 8:59 pm"
                    app:typeface="@string/font_normal" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:orientation="vertical">

                <com.app.amyal.ui.views.AnyTextView1
                    android:id="@+id/tvStopName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x16"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/x5"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    tools:text="Las Vegas"
                    app:typeface="@string/font_normal" />


                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvPlaneName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x16"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/x5"
                    android:maxLines="1"
                    android:alpha="0.8"
                    tools:text="Airbus A321"
                    app:typeface="@string/font_normal" />


                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvFlightType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x16"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/x5"
                    android:maxLines="1"
                    android:alpha="0.8"
                    tools:text="Economy (L)"
                    app:typeface="@string/font_normal" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="@dimen/x12"
                    android:layout_marginBottom="@dimen/x20"
                    android:alpha="0.2"
                    android:background="@color/white"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>