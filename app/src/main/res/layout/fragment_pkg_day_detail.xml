<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slPlace"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x180"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                custom:auto_cycle="true"
                custom:indicator_visibility="visible"
                custom:pager_animation="Accordion"
                custom:pager_animation_span="1100" />

            <com.daimajia.slider.library.Indicators.PagerIndicator
                android:id="@+id/pagerIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/x5"
                android:gravity="center"
                custom:selected_color="@color/darkBrown"
                custom:selected_height="@dimen/x15"
                custom:selected_padding_left="@dimen/x15"
                custom:selected_padding_right="@dimen/x15"
                custom:selected_width="@dimen/x15"
                custom:shape="oval"
                custom:unselected_color="@color/grey"
                custom:unselected_height="@dimen/x10"
                custom:unselected_padding_left="@dimen/x10"
                custom:unselected_padding_right="@dimen/x10"
                custom:unselected_width="@dimen/x10" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkBrown"
            android:orientation="vertical"
            android:padding="@dimen/x7">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x16"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/x5"
                    android:maxLines="1"
                    android:text="Day 1 - Arrival in Goa"
                    app:typeface="@string/font_normal" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x12"
                    android:layout_marginLeft="@dimen/x5"
                    android:maxLines="1"
                    android:alpha="0.8"
                    android:text="Beaches, Nightlife &amp; Leisure Day"
                    app:typeface="@string/font_normal" />


            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/x60"
            android:padding="@dimen/x15">

            <com.app.amyal.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 1"
                android:textColor="@color/darkBrown"
                android:textSize="@dimen/x16"
                app:typeface="@string/font_normal" />

            <com.app.amyal.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/x12"
                android:layout_marginTop="@dimen/x5"
                android:maxLines="1"
                android:alpha="0.8"
                android:text="Arival in Goa"
                app:typeface="@string/font_normal" />

            <com.app.amyal.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/x12"
                android:layout_marginTop="@dimen/x10"
                android:maxLines="1"
                android:alpha="0.8"
                android:text="Transfer to Hotel &amp; Check in"
                app:typeface="@string/font_normal" />

            <com.app.amyal.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/x12"
                android:layout_marginTop="@dimen/x10"
                android:maxLines="1"
                android:alpha="0.8"
                android:text="Day at Leisure"
                app:typeface="@string/font_normal" />

            <com.app.amyal.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/x12"
                android:layout_marginTop="@dimen/x10"
                android:maxLines="1"
                android:alpha="0.8"
                android:text="Explore Beaches"
                app:typeface="@string/font_normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/x15"
                android:layout_marginBottom="@dimen/x15"
                android:alpha="0.2"
                android:background="@color/white"/>

            <com.app.amyal.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:drawablePadding="@dimen/x5"
                android:layout_marginBottom="@dimen/x5"
                android:text="Benifits on Arrival"
                android:textColor="@color/darkBrown"
                android:layout_centerVertical="true"
                android:textSize="@dimen/x16"
                app:typeface="@string/font_normal" />

            <com.app.amyal.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transfers"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/tick1"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginLeft="@dimen/x10"
                android:drawablePadding="@dimen/x10"
                android:textSize="@dimen/x12"
                android:alpha="0.8"
                app:typeface="@string/font_normal" />

            <com.app.amyal.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stay Included"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/tick1"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginLeft="@dimen/x10"
                android:drawablePadding="@dimen/x10"
                android:textSize="@dimen/x12"
                android:alpha="0.8"
                app:typeface="@string/font_normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/x15"
                android:layout_marginBottom="@dimen/x15"
                android:alpha="0.2"
                android:background="@color/white"/>

        </LinearLayout>



    </LinearLayout>

</ScrollView>