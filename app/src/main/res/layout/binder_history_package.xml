<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x17"
        android:background="@drawable/roundshapelayout"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivPackage1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x160"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:src="@drawable/package2"/>

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x160"
                android:id="@+id/ivPackage"
                android:background="@drawable/package2"
                android:scaleType="fitXY"
                app:riv_corner_radius="5dip"
                app:riv_border_color="@color/white"
                app:riv_mutate_background="true"
                app:riv_tile_mode="clamp"
                app:riv_oval="false" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/strip"
                android:layout_marginTop="@dimen/x20"
                android:padding="@dimen/x5">


                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x5"
                    android:maxLines="1"
                    android:text="3 Days"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x12"
                    app:typeface="@string/font_normal" />

                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvNights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x3"
                    android:layout_marginRight="@dimen/x3"
                    android:maxLines="1"
                    android:visibility="gone"
                    android:text="2 Nights"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x12"
                    app:typeface="@string/font_normal" />



            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/x8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvPackageName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x5"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Hundread Island Package "
                    android:layout_toStartOf="@+id/tvPrice"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/darkBrown"
                    android:textSize="@dimen/x16"
                    app:typeface="@string/font_normal" />

                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x5"
                    android:maxLines="1"
                    android:text="AED 1500.00"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/font_normal" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.app.amyal.ui.views.CustomRatingBar
                        android:id="@+id/CrRating"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x15"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_marginTop="@dimen/x3"
                        android:visibility="visible"
                        app:maxStars="5"
                        app:onlyForDisplay="true"
                        app:starOff="@drawable/star1"
                        app:starOn="@drawable/star"
                        app:starPadding="@dimen/x2"
                        app:stars="4" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/x5">

                        <com.app.amyal.ui.views.AnyTextView
                            android:id="@+id/tvRatting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x5"
                            android:maxLines="1"
                            android:text="3.4"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/x12"
                            app:typeface="@string/font_normal" />

                        <com.app.amyal.ui.views.AnyTextView
                            android:id="@+id/tvRattingInWord"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x5"
                            android:maxLines="1"
                            android:text="Very Good"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/x12"
                            app:typeface="@string/font_normal" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.app.amyal.ui.views.AnyTextView
                        android:id="@+id/BtnMoreInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:background="@drawable/spinner_bg_drawable"
                        android:paddingLeft="@dimen/x12"
                        android:paddingRight="@dimen/x12"
                        android:paddingTop="@dimen/x5"
                        android:paddingBottom="@dimen/x5"
                        android:text="More Info"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x12"
                        app:typeface="@string/font_normal" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>