<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/x5"
        android:alpha="0.2"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/llSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x15"
        android:background="@drawable/spinner_bg_drawable"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spSort"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            style="@style/spinner_style"
            android:textSize="@dimen/x15" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="@drawable/spinner_bg_drawable"
        android:layout_margin="@dimen/x15"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:layout_weight="0.2"
            android:background="@drawable/search"
            android:padding="@dimen/x5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x5"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <com.app.amyal.ui.views.AnyEditTextView
                android:id="@+id/edt_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x20"
                android:background="@color/transparent"
                android:hint="@string/search"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="30"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#F6DDDD"
                android:textColorHint="@color/white"
                android:textSize="@dimen/x15"
                app:typeface="@string/font_normal" />


        </LinearLayout>


        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/x35"
            android:layout_height="@dimen/x20"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x10"
            android:layout_weight="0.2"
            android:background="@drawable/ic_close_dark"
            android:padding="@dimen/x5" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llOutbound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x10"
        android:background="@drawable/roundshapelayout"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginBottom="@dimen/x15"
        android:visibility="gone"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">


            <com.app.amyal.ui.views.AnyTextView
                android:id="@+id/tvFlightName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x15"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:text="Emirates"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x16"
                app:typeface="@string/font_normal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvFlightDuraion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:maxLines="1"
                    android:text="2hr 14m"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/x16"
                    app:typeface="@string/font_normal" />

                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvFlightStops"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_alignParentRight="true"
                    android:maxLines="1"
                    android:text="(2 Stops)"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/x16"
                    app:typeface="@string/font_normal" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:gravity="right|center_vertical">

            <com.app.amyal.ui.views.AnyTextView
                android:id="@+id/tvOutbound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Outbound"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x16"
                app:typeface="@string/font_normal" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/lvFlights"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginBottom="@dimen/x60"
        android:divider="@color/transparent"
        android:dividerHeight="@dimen/x15"/>

</LinearLayout>