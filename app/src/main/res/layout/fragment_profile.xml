<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/svmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/x40"
        android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/x5"
        android:alpha="0.2"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_ProfileImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civProfilePic1"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x120"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/profilepic"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civProfilePic"
                android:layout_width="@dimen/x113"
                android:layout_height="@dimen/x113"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true" />


            <Button
                android:id="@+id/btnEdit"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x24"
                android:layout_alignBottom="@+id/civProfilePic"
                android:layout_alignEnd="@+id/civProfilePic"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="@dimen/x5"
                android:background="@drawable/editpic" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x25"
            android:layout_marginStart="@dimen/x25"
            android:layout_marginTop="@dimen/x18"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/x10"
                android:src="@drawable/name" />

            <com.app.amyal.ui.views.AnyEditTextView
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:alpha="0.7"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:hint="@string/name"
                android:enabled="false"
                android:focusable="false"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/x16"
                app:typeface="@string/font_normal" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="@dimen/x25"
            android:layout_marginStart="@dimen/x25"
            android:layout_marginTop="@dimen/x4"
            android:background="@color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x25"
            android:layout_marginStart="@dimen/x25"
            android:layout_marginTop="@dimen/x10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/x10"
                android:src="@drawable/phone" />

            <com.app.amyal.ui.views.AnyEditTextView
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:alpha="0.7"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/mobile_number"
                android:imeOptions="actionDone"
                android:enabled="false"
                android:focusable="false"
                android:maxLength="20"
                android:layout_gravity="center_vertical"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/x16"
                app:typeface="@string/font_normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="@dimen/x25"
            android:layout_marginStart="@dimen/x25"
            android:layout_marginTop="@dimen/x4"
            android:background="@color/white" />


        <LinearLayout
            android:id="@+id/llMyReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x25"
            android:layout_marginStart="@dimen/x25"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/x10"
                android:src="@drawable/myreviews" />

            <com.app.amyal.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x14"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/x14"
                android:text="@string/my_reviews"
                android:textColor="@color/white"
                android:textSize="@dimen/x16"
                app:typeface="@string/font_normal" />

            <ImageView
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/x18"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/x10"
                android:src="@drawable/next" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="@dimen/x25"
            android:layout_marginStart="@dimen/x25"
            android:layout_marginTop="@dimen/x4"
            android:background="@color/white" />


        <Button
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x25"
            android:layout_marginStart="@dimen/x25"
            android:layout_marginTop="@dimen/x70"
            android:layout_marginBottom="@dimen/x60"
            android:background="@drawable/btn"
            android:text="@string/done"
            android:textSize="@dimen/x18"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </LinearLayout>

    </LinearLayout>

</ScrollView>