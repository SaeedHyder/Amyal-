<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/roundshapelayout"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="@dimen/x300"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x20"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        >

        <com.app.amyal.ui.views.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:gravity="left"
            android:text="@string/no_of_travellers"
            android:textColor="@color/darkBrown"
            android:textSize="@dimen/x20"
            app:typeface="@string/font_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:layout_marginBottom="@dimen/x5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x10"
                    android:background="@drawable/adult"/>

                <com.app.amyal.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/adult"
                    android:layout_marginLeft="@dimen/x10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x15"
                    android:alpha="0.7"
                    app:typeface="@string/font_normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:layout_marginRight="@dimen/x20"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnAdultAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x8"
                    android:background="@drawable/add"/>

                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvNoOfAdult"
                    android:layout_width="@dimen/x30"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:maxLength="3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x15"
                    android:alpha="0.7"
                    app:typeface="@string/font_normal"/>

                <ImageButton
                    android:id="@+id/btnAdultRemove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x8"
                    android:background="@drawable/minus"/>

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:alpha="0.2"
            android:background="@color/dark_grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x10"
                    android:background="@drawable/child"/>

                <com.app.amyal.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/childern"
                    android:layout_marginLeft="@dimen/x10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x15"
                    android:alpha="0.7"
                    app:typeface="@string/font_normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:layout_marginRight="@dimen/x20"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnChildAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x8"
                    android:background="@drawable/add"/>

                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvNoOfChild"
                    android:layout_width="@dimen/x30"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center_horizontal"
                    android:maxLength="3"
                    android:layout_marginLeft="@dimen/x15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x15"
                    android:alpha="0.7"
                    app:typeface="@string/font_normal" />

                <ImageButton
                    android:id="@+id/btnChildRemove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:padding="@dimen/x8"
                    android:background="@drawable/minus"/>

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:alpha="0.2"
            android:background="@color/dark_grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x10"
                    android:background="@drawable/infant"/>

                <com.app.amyal.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/infant"
                    android:layout_marginLeft="@dimen/x10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x15"
                    android:alpha="0.7"
                    app:typeface="@string/font_normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:layout_marginRight="@dimen/x20"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnInfantdAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x8"
                    android:background="@drawable/add"/>

                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvNoOfInfant"
                    android:layout_width="@dimen/x30"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center_horizontal"
                    android:maxLength="3"
                    android:layout_marginLeft="@dimen/x15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x15"
                    android:alpha="0.7"
                    app:typeface="@string/font_normal"/>

                <ImageButton
                    android:id="@+id/btnInfantRemove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:padding="@dimen/x8"
                    android:background="@drawable/minus"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:alpha="0.2"
        android:visibility="gone"
        android:background="@color/dark_grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.app.amyal.ui.views.AnyTextView
            android:id="@+id/tvDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/done"
            android:gravity="center_horizontal"
            android:textColor="@color/sky_blue"
           android:paddingBottom="@dimen/x10"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:textSize="@dimen/x20"
            app:typeface="@string/font_normal" />


    </LinearLayout>

</LinearLayout>