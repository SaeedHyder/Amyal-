        <LinearLayout
            android:id="@+id/llTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llLeftTab"
                android:layout_width="0dp"
                android:layout_height="@dimen/x55"
                android:layout_marginTop="@dimen/x5"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <com.app.amyal.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/outbound"
                    android:gravity="center_vertical"
                    android:textColor="@color/darkBrown"
                    android:textSize="@dimen/x18"
                    app:typeface="@string/font_normal" />


                <View
                    android:id="@+id/vLeftIndecator"
                    android:layout_width="match_parent"
                    android:layout_height="5px"
                    android:layout_marginLeft="@dimen/x25"
                    android:layout_marginRight="@dimen/x25"
                    android:background="@color/darkBrown" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRightTab"
                android:layout_width="0dp"
                android:layout_height="@dimen/x55"
                android:layout_marginTop="@dimen/x5"
                android:layout_weight="1"
                android:alpha="0.5"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvReturn"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/Inbound"
                    android:textColor="@color/darkBrown"
                    android:textSize="@dimen/x18"
                    app:typeface="@string/font_normal" />

                <View
                    android:id="@+id/vRightIndecator"
                    android:layout_width="match_parent"
                    android:layout_height="5px"
                    android:layout_marginLeft="@dimen/x25"
                    android:layout_marginRight="@dimen/x25"
                    android:background="@color/darkBrown"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>

        <ListView
            android:id="@+id/lvBooking"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/x5"
            android:layout_margin="@dimen/x15"
            android:layout_height="wrap_content"
            android:divider="@null"></ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x15"
            android:padding="@dimen/x15"
            android:orientation="horizontal">

            <com.app.amyal.ui.views.AnyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/x18"
                android:layout_weight="0.3"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:text="@string/total_bil"
                app:typeface="@string/font_normal" />

            <com.app.amyal.ui.views.AnyTextView
                android:id="@+id/tvTotalBill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/x18"
                android:layout_weight="0.7"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:text="AED 1500.00"
                app:typeface="@string/font_normal" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnBookingHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x25"
        android:layout_marginStart="@dimen/x25"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/btn"
        android:text="@string/manage_bookings"
        android:textAllCaps="false"
        android:textSize="@dimen/x18"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x25"
        android:layout_marginStart="@dimen/x25"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/btn"
        android:layout_marginBottom="@dimen/x60"
        android:text="@string/home"
        android:textSize="@dimen/x18"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    </LinearLayout>


</ScrollView>