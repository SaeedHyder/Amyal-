<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_sidemenu">

    <LinearLayout
        android:id="@+id/llLeft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/llRight"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x70"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x55"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civProfilePic"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:src="@drawable/profilepic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/x15"
                android:orientation="vertical">

                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/txtUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:text="James Camaron"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x15"
                    app:typeface="@string/font_bold" />

                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/txtViewProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:text="@string/view_profile"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x13"
                    app:typeface="@string/font_normal" />

            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/sideoptions"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:layout_weight="0.6"
            android:divider="@color/white"
            android:dividerHeight="1px"
            android:scrollbars="none" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRight"
        android:layout_width="@dimen/x20"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/sidemenu_shadow">


    </LinearLayout>


</RelativeLayout>