                <com.app.amyal.ui.views.AnyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/x14"
                    android:layout_weight="0.4"
                    android:maxLines="1"
                    android:alpha="0.5"
                    android:text="@string/flying_to"
                    app:typeface="@string/font_normal" />

                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvTo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/x14"
                    android:layout_weight="0.5"
                    android:maxLines="1"
                    android:alpha="0.8"
                    tools:text="A1512"
                    app:typeface="@string/font_normal" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:orientation="horizontal">

                <com.app.amyal.ui.views.AnyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/x14"
                    android:layout_weight="0.4"
                    android:maxLines="1"
                    android:alpha="0.5"
                    android:text="@string/total_amount"
                    app:typeface="@string/font_normal" />

                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvTotalBill"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/x14"
                    android:layout_weight="0.5"
                    android:maxLines="1"
                    android:alpha="0.8"
                    tools:text="A1512"
                    app:typeface="@string/font_normal" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundshapelayout"
            android:padding="@dimen/x15"
            android:layout_margin="@dimen/x15"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvAddInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkBrown"
                    android:textSize="@dimen/x16"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:ellipsize="end"
                    android:layout_toStartOf="@+id/btnAddTravel"
                    android:maxLines="1"
                    android:text="@string/add_traveller_info"
                    app:typeface="@string/font_normal" />

                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/btnAddTravel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/add"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/x20"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x20"
                    android:paddingTop="@dimen/x4"
                    android:visibility="gone"
                    android:paddingBottom="@dimen/x4"
                    android:background="@drawable/toggle_selected"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x13"
                    app:typeface="@string/font_normal"/>

            </RelativeLayout>

