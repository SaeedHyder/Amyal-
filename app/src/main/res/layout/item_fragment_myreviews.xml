<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x10"
        android:background="@drawable/roundshapelayout"
        android:orientation="horizontal">

       <!-- <ImageView
            android:id="@+id/ivUser"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:scaleType="fitXY"
            android:src="@drawable/profilepic" />-->

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivUser"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:background="@drawable/profilepic"  />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:orientation="vertical">

            <com.app.amyal.ui.views.AnyTextView
                android:id="@+id/tvCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/darkBrown"
                android:textSize="@dimen/x15"
                android:layout_marginLeft="@dimen/x5"
                android:maxLength="50"
                android:ellipsize="end"
                tools:text="Port Adrino Hotel"
                app:typeface="@string/font_normal" />

            <com.app.amyal.ui.views.CustomRatingBar
                android:id="@+id/CrRating"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x15"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/x7"
                android:layout_marginBottom="@dimen/x12"
                android:layout_marginLeft="@dimen/x5"
                android:visibility="visible"
                app:maxStars="5"
                app:onlyForDisplay="true"
                app:starOff="@drawable/star1"
                app:starOn="@drawable/star"
                app:starPadding="@dimen/x2"
                app:stars="4" />

            <com.app.amyal.ui.views.AnyTextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:layout_marginLeft="@dimen/x7"
                android:textSize="@dimen/x13"
                tools:text="Junly 22 2017"
                app:typeface="@string/font_normal" />

            <com.app.amyal.ui.views.AnyTextView
                android:id="@+id/tvReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:layout_marginLeft="@dimen/x7"
                android:layout_marginTop="@dimen/x15"
                android:layout_marginBottom="@dimen/x15"
                android:textSize="@dimen/x13"
                tools:text="Lorem Ipsum is simply dummy text of the printing and type etting industry. Lorem Ipsum has been the industrys standard dummy text ever sinc"
                app:typeface="@string/font_normal" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>