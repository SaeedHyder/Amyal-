<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/svmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/x5"
        android:alpha="0.2"
        android:background="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            android:orientation="vertical">

            <com.app.amyal.ui.views.AnyTextView1
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Traveler names must match goverment-issued photo ID exactly."
                android:textColor="@color/white"
                android:textSize="@dimen/x16"
                app:typeface="@string/font_bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/x10"
                    android:src="@drawable/name" />

                <com.app.amyal.ui.views.AnyEditTextView
                    android:id="@+id/edtFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/x16"
                    app:typeface="@string/font_normal" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:layout_marginTop="@dimen/x4"
                android:background="@color/white"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/x10"
                    android:src="@drawable/name" />

                <com.app.amyal.ui.views.AnyEditTextView
                    android:id="@+id/edtMiddleName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/middleName"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/x16"
                    app:typeface="@string/font_normal" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:layout_marginTop="@dimen/x4"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/x10"
                    android:src="@drawable/name" />

                <com.app.amyal.ui.views.AnyEditTextView
                    android:id="@+id/edtLastName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/surname"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/x16"
                    app:typeface="@string/font_normal" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:layout_marginTop="@dimen/x4"
                android:background="@color/white" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/x10"
                    android:src="@drawable/email" />

                <com.app.amyal.ui.views.AnyEditTextView
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/email"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/x15"
                    app:testType="email"
                    app:typeface="@string/font_normal" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:layout_marginTop="@dimen/x4"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/llGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/x10"
                android:paddingTop="@dimen/x10">

                <ImageView
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/x10"
                    android:src="@drawable/gender" />

                <com.app.amyal.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/gender"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x16"
                    app:typeface="@string/font_normal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <com.app.amyal.ui.views.AnyTextView
                        android:id="@+id/btnMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/male"
                        android:textColor="@color/darkBrown"
                        android:textSize="@dimen/x16"
                        app:typeface="@string/font_normal" />


                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_marginRight="@dimen/x15"
                        android:alpha="0.6"
                        android:background="@color/white"
                        android:paddingBottom="@dimen/x15"
                        android:paddingTop="@dimen/x15" />

                    <com.app.amyal.ui.views.AnyTextView
                        android:id="@+id/btnFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/female"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x16"
                        app:typeface="@string/font_normal" />


                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:layout_marginTop="@dimen/x4"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/llDOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/x10"
                android:paddingTop="@dimen/x10">

                <ImageView
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/x10"
                    android:src="@drawable/dob" />

                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvDob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dob"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x16"
                    app:typeface="@string/font_normal" />


                <ImageView
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/x10"
                    android:src="@drawable/calender" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:layout_marginTop="@dimen/x4"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:layout_marginTop="@dimen/x10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/x10"
                    android:src="@drawable/phone" />

                <com.app.amyal.ui.views.AnyEditTextView
                    android:id="@+id/edtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/phone"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/x16"
                    app:typeface="@string/font_normal" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:layout_marginTop="@dimen/x4"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:layout_marginTop="@dimen/x10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/x10"
                    android:src="@drawable/passicon" />

                <com.app.amyal.ui.views.AnyEditTextView
                    android:id="@+id/edtPassportNo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/passport"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/x16"
                    app:typeface="@string/font_normal" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:layout_marginTop="@dimen/x4"
                android:background="@color/white"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/llExpiaryDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/x10"
                android:paddingTop="@dimen/x10">

                <ImageView
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/x10"
                    android:src="@drawable/passicon" />

                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvExpiaryDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/passport_expiring_date"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x16"
                    app:typeface="@string/font_normal" />


                <ImageView
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/x10"
                    android:src="@drawable/calender" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:layout_marginTop="@dimen/x4"
                android:background="@color/white" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x35"
                android:layout_marginStart="@dimen/x35"
                android:layout_marginTop="@dimen/x10"
                android:orientation="vertical">


                <com.app.amyal.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/residence_country"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x15"
                    app:typeface="@string/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/ccp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:ccp_contentColor="@color/white"
                        app:ccp_rememberLastSelection="true"
                        android:textSize="@dimen/x16"
                        app:ccp_showFullName="true"
                        app:ccp_showNameCode="false"
                        app:ccp_showPhoneCode="false"
                        app:ccp_defaultNameCode="ae" />


                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:layout_marginTop="@dimen/x4"
                android:background="@color/white"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:layout_marginTop="@dimen/x10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/x10"
                    android:src="@drawable/location" />

                <com.app.amyal.ui.views.AnyEditTextView
                    android:id="@+id/edtCity"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/city"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/x16"
                    app:typeface="@string/font_normal" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:layout_marginTop="@dimen/x4"
                android:background="@color/white"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:layout_marginTop="@dimen/x10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/x10"
                    android:src="@drawable/location" />

                <com.app.amyal.ui.views.AnyEditTextView
                    android:id="@+id/edtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/address"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/x16"
                    app:typeface="@string/font_normal" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:layout_marginTop="@dimen/x4"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/llEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x30"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:layout_marginTop="@dimen/x25"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/x5"
                    android:layout_weight="0.5"
                    android:background="@drawable/btn"
                    android:text="@string/edit"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x5"
                    android:layout_weight="0.5"
                    android:background="@drawable/btn"
                    android:text="@string/delete"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </LinearLayout>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x70"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:layout_marginTop="@dimen/x25"
                android:background="@drawable/btn"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/x18" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>