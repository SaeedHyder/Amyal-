<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comming Soon"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="30sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:orientation="vertical"
            android:paddingBottom="@dimen/x60"
            android:visibility="gone">

            <com.app.amyal.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Search Destination"
                android:textColor="@color/white"
                android:textSize="@dimen/x18"
                app:typeface="@string/font_normal" />


            <LinearLayout
                android:id="@+id/llSource"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x60"
                android:layout_marginTop="@dimen/x15"
                android:background="@drawable/roundshapelayout"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_weight="0.2"
                    android:background="@drawable/search_red"
                    android:padding="@dimen/x5" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/x5"
                    android:layout_marginLeft="@dimen/x13"
                    android:layout_marginTop="@dimen/x5"
                    android:background="@color/light_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <com.app.amyal.ui.views.AnyTextView1
                        android:id="@+id/tvSource"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x8"
                        android:layout_marginRight="@dimen/x10"
                        android:background="@color/transparent"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:hint="@string/source"
                        android:maxLines="1"
                        android:textColor="@color/dark_grey"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/x15"
                        app:typeface="@string/font_normal" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSearch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x60"
                android:layout_marginTop="@dimen/x15"
                android:background="@drawable/roundshapelayout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_weight="0.2"
                    android:background="@drawable/search_red"
                    android:padding="@dimen/x5" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/x5"
                    android:layout_marginLeft="@dimen/x13"
                    android:layout_marginTop="@dimen/x5"
                    android:background="@color/light_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <com.app.amyal.ui.views.AnyTextView1
                        android:id="@+id/tvSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x8"
                        android:layout_marginRight="@dimen/x10"
                        android:background="@color/transparent"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:hint="@string/destination"
                        android:maxLines="1"
                        android:textColor="@color/dark_grey"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/x15"
                        app:typeface="@string/font_normal" />


                </LinearLayout>


                <ImageView
                    android:id="@+id/ivClose"
                    android:layout_width="@dimen/x35"
                    android:layout_height="@dimen/x20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_weight="0.2"
                    android:background="@drawable/ic_close_dark"
                    android:padding="@dimen/x5"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llSelectDates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llFrom"
                android:layout_marginTop="@dimen/x13"
                android:background="@drawable/roundshapelayout"
                android:orientation="vertical"
                android:padding="@dimen/x15">


                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvSelectDates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Select Dates"
                    android:textColor="@color/darkBrown"
                    android:textSize="@dimen/x15"
                    app:typeface="@string/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.app.amyal.ui.views.AnyTextView
                        android:id="@+id/tvFromDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x5"
                        android:gravity="left"
                        android:hint="From Date"
                        android:textColor="@color/dark_grey"
                        android:textColorHint="@color/dark_grey"
                        android:textSize="@dimen/x15"
                        app:typeface="@string/font_normal" />

                    <com.app.amyal.ui.views.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_marginTop="@dimen/x5"
                        android:text="-"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/x15"
                        android:visibility="gone"
                        app:typeface="@string/font_bold" />

                    <com.app.amyal.ui.views.AnyTextView
                        android:id="@+id/tvToDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_marginTop="@dimen/x5"
                        android:hint="- To Date"
                        android:textColor="@color/dark_grey"
                        android:textColorHint="@color/dark_grey"
                        android:textSize="@dimen/x15"
                        app:typeface="@string/font_normal" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTravellers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llFrom"
                android:layout_marginTop="@dimen/x13"
                android:background="@drawable/roundshapelayout"
                android:orientation="vertical"
                android:padding="@dimen/x15">

                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvTravellers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/travellers"
                    android:textColor="@color/darkBrown"
                    android:textSize="@dimen/x15"
                    app:typeface="@string/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.app.amyal.ui.views.AnyTextView
                        android:id="@+id/tvNoOfAdult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x5"
                        android:gravity="left"
                        android:text="1 Adult,"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/x15"
                        app:typeface="@string/font_normal" />

                    <com.app.amyal.ui.views.AnyTextView
                        android:id="@+id/tvNoOfChild"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_marginTop="@dimen/x5"
                        android:text="0 Child,"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/x15"
                        app:typeface="@string/font_normal" />

                    <com.app.amyal.ui.views.AnyTextView
                        android:id="@+id/tvNoOfInfant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_marginTop="@dimen/x5"
                        android:text="0 Infant"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/x15"
                        app:typeface="@string/font_normal" />


                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x30"
                android:layout_marginTop="@dimen/x30"
                android:background="@drawable/btn"
                android:text="@string/search"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/x18" />


        </LinearLayout>
    </RelativeLayout>
</ScrollView>