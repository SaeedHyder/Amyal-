<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Comming Soon"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x30"
            android:orientation="vertical"
            android:paddingBottom="@dimen/x60"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/llSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:background="@drawable/spinner_bg_drawable"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spCarType"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x45"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_marginRight="@dimen/x15"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x15" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/llPickUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:background="@drawable/roundshapelayout"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/x10"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x15"
                    android:paddingTop="@dimen/x10">


                    <com.app.amyal.ui.views.AnyTextView
                        android:id="@+id/tvPick_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/car_icon"
                        android:drawablePadding="@dimen/x10"
                        android:gravity="left"
                        android:text="@string/pick_up"
                        android:textColor="@color/darkBrown"
                        android:textSize="@dimen/x17"
                        app:typeface="@string/font_bold" />

                    <com.app.amyal.ui.views.AnyTextView1
                        android:id="@+id/tvPickAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x35"
                        android:layout_marginLeft="@dimen/x30"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical"
                        android:hint="@string/address"
                        android:singleLine="true"
                        android:textColor="@color/dark_grey"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/x15"
                        app:typeface="@string/font_normal" />

                    <com.app.amyal.ui.views.AutoCompleteLocation
                        android:id="@+id/edtPickup"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x40"
                        android:layout_marginLeft="@dimen/x14"
                        android:background="@null"
                        android:ellipsize="end"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/dark_grey"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/x15"
                        android:visibility="gone"
                        app:background_layout="@null"
                        app:hint_text="@string/address" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDropOff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llPickUp"
                    android:layout_marginTop="@dimen/x13"
                    android:background="@drawable/roundshapelayout"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/x10"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x15"
                    android:paddingTop="@dimen/x10">


                    <com.app.amyal.ui.views.AnyTextView
                        android:id="@+id/tvDrop_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/car_icon"
                        android:drawablePadding="@dimen/x10"
                        android:gravity="left"
                        android:text="@string/drop_off"
                        android:textColor="@color/darkBrown"
                        android:textSize="@dimen/x17"
                        app:typeface="@string/font_bold" />

                    <com.app.amyal.ui.views.AnyTextView1
                        android:id="@+id/tvDropAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x35"
                        android:layout_marginLeft="@dimen/x30"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical"
                        android:hint="@string/address"
                        android:singleLine="true"
                        android:textColor="@color/dark_grey"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/x15"
                        app:typeface="@string/font_normal" />

                    <com.app.amyal.ui.views.AutoCompleteLocation
                        android:id="@+id/edtDropoff"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x40"
                        android:layout_marginLeft="@dimen/x14"
                        android:background="@null"
                        android:ellipsize="end"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/dark_grey"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/x15"
                        android:visibility="gone"
                        app:background_layout="@null"
                        app:hint_text="@string/address" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/ivSwap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x15"
                        android:rotation="90"
                        android:src="@drawable/center" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llSelectDates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llFrom"
                android:layout_marginTop="@dimen/x13"
                android:background="@drawable/roundshapelayout"
                android:orientation="vertical"
                android:padding="@dimen/x15">


                <com.app.amyal.ui.views.AnyTextView
                    android:id="@+id/tvSelectDates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Select Dates"
                    android:textColor="@color/darkBrown"
                    android:textSize="@dimen/x15"
                    app:typeface="@string/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.app.amyal.ui.views.AnyTextView
                        android:id="@+id/tvPickUpDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x5"
                        android:gravity="left"
                        android:hint="@string/pick_up_date"
                        android:textColor="@color/dark_grey"
                        android:textColorHint="@color/dark_grey"
                        android:textSize="@dimen/x15"
                        app:typeface="@string/font_normal" />

                    <com.app.amyal.ui.views.AnyTextView
                        android:id="@+id/tvDropOffDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x5"
                        android:hint="- Drop-off Date"
                        android:textColor="@color/dark_grey"
                        android:textColorHint="@color/dark_grey"
                        android:textSize="@dimen/x15"
                        app:typeface="@string/font_normal" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x15"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llPickUpTime"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x80"
                    android:layout_weight="1"
                    android:background="@drawable/roundshapelayout"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/x15"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x13"
                    android:paddingTop="@dimen/x15">

                    <com.app.amyal.ui.views.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/time_red"
                        android:drawablePadding="@dimen/x10"
                        android:gravity="left"
                        android:text="@string/pick_up"
                        android:textColor="@color/darkBrown"
                        android:textSize="@dimen/x17"
                        app:typeface="@string/font_normal" />

                    <com.app.amyal.ui.views.AnyTextView
                        android:id="@+id/tvPick_upTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x25"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:hint="@string/select_time"
                        android:maxLength="14"
                        android:maxLines="1"
                        android:textColor="@color/dark_grey"
                        android:textColorHint="@color/dark_grey"
                        android:textSize="@dimen/x14"
                        app:typeface="@string/font_normal" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDropOffTime"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x80"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_weight="1"
                    android:background="@drawable/roundshapelayout"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/x15"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x13"
                    android:paddingTop="@dimen/x15">


                    <com.app.amyal.ui.views.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/time_red"
                        android:drawablePadding="@dimen/x10"
                        android:gravity="left"
                        android:text="@string/drop_off"
                        android:textColor="@color/darkBrown"
                        android:textSize="@dimen/x17"
                        app:typeface="@string/font_normal" />

                    <com.app.amyal.ui.views.AnyTextView
                        android:id="@+id/tvDrop_offTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x25"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:hint="@string/select_time"
                        android:maxLength="14"
                        android:maxLines="1"
                        android:textColor="@color/dark_grey"
                        android:textColorHint="@color/dark_grey"
                        android:textSize="@dimen/x14"
                        app:typeface="@string/font_normal" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x13"
                android:background="@drawable/roundshapelayout"
                android:orientation="vertical"
                android:padding="@dimen/x15"
                android:visibility="gone">


                <com.app.amyal.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/residence_country"
                    android:textColor="@color/darkBrown"
                    android:textSize="@dimen/x15"
                    app:typeface="@string/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/ccp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:ccp_areaCodeDetectedCountry="true"
                        app:ccp_rememberLastSelection="true"
                        app:ccp_showFullName="true"
                        app:ccp_showNameCode="true"
                        app:ccp_showPhoneCode="false" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x13"
                android:background="@drawable/roundshapelayout"
                android:orientation="vertical"
                android:padding="@dimen/x15">


                <com.app.amyal.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/driver_age"
                    android:textColor="@color/darkBrown"
                    android:textSize="@dimen/x15"
                    app:typeface="@string/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.app.amyal.ui.views.AnyEditTextView
                        android:id="@+id/edtAge"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x40"
                        android:layout_gravity="center_vertical"
                        android:alpha="0.5"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:hint="@string/enter_driver_age"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="@color/dark_grey"
                        android:textColorHint="@color/dark_grey"
                        android:textSize="@dimen/x16"
                        app:typeface="@string/font_normal" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x15"
                android:background="@drawable/roundshapelayout">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvCarsType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/x3"
                    android:visibility="gone"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/llEconomy"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selecter_rounded"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/x20"
                        android:paddingTop="@dimen/x20">

                        <ImageView
                            android:id="@+id/ivEconomy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/car_economy1" />

                        <com.app.amyal.ui.views.AnyTextView
                            android:id="@+id/tvEconomy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x5"
                            android:text="@string/economy"
                            android:textColor="@color/darkBrown"
                            android:textSize="@dimen/x14"
                            app:typeface="@string/font_normal" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llBusiness"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/x20"
                        android:paddingTop="@dimen/x20">

                        <ImageView
                            android:id="@+id/ivBusiness"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/car_business1" />

                        <com.app.amyal.ui.views.AnyTextView
                            android:id="@+id/tvBusiness"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x5"
                            android:text="@string/business"
                            android:textColor="@color/dark_grey"
                            android:textColorHint="@color/dark_grey"
                            android:textSize="@dimen/x14"
                            app:typeface="@string/font_normal" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llFirst"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/x20"
                        android:paddingTop="@dimen/x20">

                        <ImageView
                            android:id="@+id/ivFirst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/firstclass1" />

                        <com.app.amyal.ui.views.AnyTextView
                            android:id="@+id/tvFirst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x5"
                            android:text="@string/first_class"
                            android:textColor="@color/dark_grey"
                            android:textColorHint="@color/dark_grey"
                            android:textSize="@dimen/x14"
                            app:typeface="@string/font_normal" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x30"
                android:layout_marginTop="@dimen/x30"
                android:background="@drawable/btn"
                android:text="@string/search"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/x18" />


        </LinearLayout>
    </RelativeLayout>
</ScrollView>