<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.



    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.



        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorAccent">@color/darkBrown</item>
        <!--<item name="android:colorPrimary">@color/dark_grey</item>-->
        <item name="android:colorPrimaryDark">@color/transparent</item><!--@color/darkBrown-->
    </style>


    <style name="DateTextApperence">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="HeadderTextApperence">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/x20</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:drawablePadding">@dimen/x5</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/spinner_dawable</item>
        <!--        <item name="android:layout_marginLeft">5dp</item>
                <item name="android:layout_marginRight">5dp</item>
                <item name="android:layout_marginBottom">5dp</item>-->
    </style>

    <style name="filter_spinner_style">
        <item name="android:background">@drawable/filter_spinner</item>
    </style>

</resources>